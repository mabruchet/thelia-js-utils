    "@babel/preset-react": "^7.16.7",
    "ts-node": "^10.7.0",
    "@types/jest": "^27.4.1",
    "jest": "^27.5.1",
    "tailwindcss": "*",
    "postcss": "*",
    "postcss-import": "^14.0.2",
    "tsup": "^5.10.1",
